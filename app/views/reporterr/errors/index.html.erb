<div class="px-3">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
<!--      <h1 class="text-base font-semibold leading-6 text-gray-900">Users</h1>-->
<!--      <p class="mt-2 text-sm text-gray-700">A list of all the users in your account including their name, title, email and role.</p>-->
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <button type="button" class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Add user</button>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-my-2 overflow-x-auto">
      <div class="inline-block min-w-full py-2 align-middle">
        <div class="relative">
<!--           Selected row actions, only show when rows are selected.-->
           <div class="absolute top-0 left-14 flex h-12 items-center space-x-3 bg-white sm:left-12">
<!--             <button type="button" class="inline-flex items-center rounded bg-white px-2 py-1 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 disabled:cursor-not-allowed disabled:opacity-30 disabled:hover:bg-white">Bulk edit</button>-->
             <button type="button" class="inline-flex items-center rounded-md bg-red-600 px-2 py-1 text-sm font-semibold text-white shadow-sm ring-1 ring-inset ring-red-400 hover:bg-red-500">Delete all</button>
           </div>

          <table class="min-w-full table-fixed divide-y divide-gray-300">
            <thead>
            <tr>
              <th scope="col" class="relative px-7 sm:w-12 sm:px-6">
                <label>
                  <input type="checkbox" class="absolute left-4 top-1/2 -mt-2 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                </label>
              </th>
              <th scope="col" class="min-w-[12rem] py-3.5 pr-3 text-left text-sm font-semibold text-gray-900">Error</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Severity</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Context</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Role</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                <span class="sr-only">View</span>
              </th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
            <% @errors.each do |e| %>
              <tr>
                <td class="relative px-7 sm:w-12 sm:px-6">
                  <input type="checkbox" class="absolute left-4 top-1/2 -mt-2 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                </td>
                <td class="whitespace-nowrap py-2 pr-3 text-sm font-medium text-gray-900"><%= e.error %></td>
                <td class="whitespace-nowrap px-3 py-2 text-sm text-gray-500"><%= e.severity %></td>
                <td class="whitespace-nowrap px-3 py-2 text-sm text-gray-500"><%= e.context %></td>
                <td class="whitespace-nowrap px-3 py-2 text-sm text-gray-500">Member</td>
                <td class="relative py-2 pl-3 text-right text-sm font-medium border-t border-transparent">
                  <button type="button" class="inline-flex items-center rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" disabled>View<span class="sr-only">, Error</span></button>
                  <div class="absolute -top-px left-0 right-6 h-px bg-gray-200"></div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
